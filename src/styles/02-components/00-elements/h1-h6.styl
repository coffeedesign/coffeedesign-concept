heading-scale( ratio = 1.2, line_height = 1.2, line_trim = 0, top_margin = 1, shift = 0 )

  h1
  h2
  h3
  h4
  h5
  h6
    line-height: line_height

  for i in (1..6)
    h{i},
    .h{i}
      power = 6 - (i - shift)
      size  = (ratio**power)em
      font-size: size


heading-scale(1.3, -3.5)
@media max-small
  heading-scale(1.2, -5)

h1
h2
h3
h4
h5
h6
  font-weight 600
