@import 'node_modules/nestle'

nestle(2, -1.75)
@media (max-width: 800px)
  nestle(1.5, -1.5)

html
  font 87.5%/1.4 'Georgia'
  -webkit-font-smoothing antialiased
  
h1
h2
h3
h4
h5
h6
  font-weight normal
  

svg
  display table
  border-spacing 0
  vertical-align middle
  width 4em
  @media (max-width: 800px)
    width 3em

.content
  max-width 80em
  margin-right: auto
  margin-left: auto
  
  &.-header
    @extend .pad-h-3, .pad-v-4, .nest-3

  &.-body
    @extend .pad-3, .nest-3
    @media (max-width: 800px)
      display none
    
    .col
      @extend .nest-3
      &:nth-child(1n)
        .post
          &:nth-child(2n - 3)
            .post-image
              &:before
                padding-top 90%
          &:nth-child(4n - 3)
            .post-image
              &:before
                padding-top 75%
                
      &:nth-child(2n)
        .post
          &:nth-child(3n - 2)
            .post-image
              &:before
                padding-top 60%
          &:nth-child(2n)
            .post-image
              &:before
                padding-top 35%
      &:nth-child(3n)
        .post
          &:nth-child(3n - 2)
            .post-image
              &:before
                padding-top 150%
          &:nth-child(5n)
            .post-image
              &:before
                padding-top 75%
      

.header
  background-color rgba(#FFF, 0.95)
  position sticky
  top 0
  z-index 100

.posts
  
  &.-hidden
    @media (min-width: 800px)
      display none
      
    .post
      @extend .v-space-none

    .post-title
      @extend .pad-3

.post
  display block
  @extend .nest-4

.post-image
  @extend .pad-4
  width 100%
  position relative
  background-color #fafafa
  background-size cover
  background-position top center
  background-repeat no-repeat
  &:before
    content ''
    display block
    padding-top 50%

    
@media (max-width: 800px)
  .grid-items
    @extend .nest-3
    
.post-title
  @extend .nest-5
  position relative
  z-index 1
    
.scale
  *
    outline 1px solid black